<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PecsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/navigation">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarPecs"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="#fff">

            <TextView
                android:id="@+id/tvToolbar"
                android:text="PECS"
                android:textColor="@color/colorPrimary"
                android:layout_marginRight="15dp"
                android:paddingTop="14dp"
                android:textStyle="bold"
                android:fontFamily="@font/lifesavers_bold"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_below="@id/toolbarPecs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="PecsActivity">

            <LinearLayout
                android:id="@+id/top_layout"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

            </LinearLayout>

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#f2f2f2">

                <LinearLayout
                    android:id="@+id/bottomLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/pecsRow1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:paddingTop="18dp">

                        <ImageView
                            android:id="@+id/pecs1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center"
                            android:src="@drawable/cardpecs_1"/>

                        <ImageView
                            android:id="@+id/pecs2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center"
                            android:src="@drawable/cardpecs_2"/>

                        <ImageView
                            android:id="@+id/pecs3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:src="@drawable/cardpecs_3"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pecsRow2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:paddingTop="18dp">

                        <ImageView
                            android:id="@+id/pecs4"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center"
                            android:src="@drawable/cardpecs_4"/>

                        <ImageView
                            android:id="@+id/pecs5"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center"
                            android:src="@drawable/cardpecs_6"/>

                        <ImageView
                            android:id="@+id/pecs6"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:src="@drawable/cardpecs_7"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/pecsRow3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:paddingTop="18dp">

                        <ImageView
                            android:id="@+id/pecs7"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center"
                            android:src="@drawable/cardpecs_8"/>

                        <ImageView
                            android:id="@+id/pecs8"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center"
                            android:src="@drawable/cardpecs_9"/>

                        <ImageView
                            android:id="@+id/pecs9"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:src="@drawable/cardpecs_10"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/pecsRow4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:paddingTop="18dp">

                        <ImageView
                            android:id="@+id/pecs10"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center"
                            android:src="@drawable/cardpecs_11"/>

                        <ImageView
                            android:id="@+id/pecs11"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center"
                            android:src="@drawable/cardpecs_12"/>

                        <ImageView
                            android:id="@+id/pecs12"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:src="@drawable/cardpecs_13"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/pecsRow5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:paddingTop="18dp">

                        <ImageView
                            android:id="@+id/pecs13"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center"
                            android:src="@drawable/cardpecs_14"/>

                        <ImageView
                            android:id="@+id/pecs14"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center"
                            android:src="@drawable/cardpecs_15"/>

                        <ImageView
                            android:id="@+id/pecs15"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:src="@drawable/cardpecs_16"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/pecsRow6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:paddingTop="18dp">

                        <ImageView
                            android:id="@+id/pecs16"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center"
                            android:src="@drawable/cardpecs_17"/>

                        <ImageView
                            android:id="@+id/pecs17"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center"
                            android:src="@drawable/cardpecs_18"/>

                        <ImageView
                            android:id="@+id/pecs18"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:src="@drawable/cardpecs_19"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </RelativeLayout>

    <include
        android:id="@+id/navigation"
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        />
</RelativeLayout>