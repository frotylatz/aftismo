<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookTutorActivity"
    android:background="#f2f2f2">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#fff">

        <TextView
            android:id="@+id/tvToolbar"
            android:text="guru+"
            android:textColor="@color/colorPrimary"
            android:paddingTop="14dp"
            android:textStyle="bold"
            android:fontFamily="@font/lifesavers_bold"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="71dp"
            />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailBookContainer"
        android:background="#fff"
        android:layout_below="@id/toolbar"
        android:padding="16dp"
        android:layout_marginTop="2dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerHorizontal="true"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imgBookTutor"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/namaBookTutor"
            android:text="Malik Zulfikar Gantina"
            android:layout_below="@id/imgBookTutor"
            android:textColor="@color/colorPrimaryText"
            android:fontFamily="@font/sourcesanspro_regular"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/namaBookTutor"
            android:id="@+id/genAgeContainer"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/genderBookTutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/sourcesanspro_regular"
                android:text="Laki-laki"
                android:textColor="@color/colorSecondaryText"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/sourcesanspro_regular"
                android:text=" - "
                android:textColor="@color/colorSecondaryText"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ageBookTutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/sourcesanspro_regular"
                android:text="25 Tahun"
                android:textColor="@color/colorSecondaryText"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lokasiBookTutor"
            android:layout_below="@id/genAgeContainer"
            android:fontFamily="@font/sourcesanspro_regular"
            android:text="Pondok Kopi, DKI Jakarta"
            android:textColor="@color/colorPrimaryText"
            android:textSize="12sp"/>

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/hargaBookTutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_below="@id/lokasiBookTutor"
            android:text="Rp 250.000 / jam"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/sourcesanspro_regular"
            android:layout_marginTop="6dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_below="@id/detailBookContainer"
        android:layout_marginTop="4dp"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tentangBookTutor"
            android:text="Tentang"
            android:textColor="@color/colorSecondaryText"
            android:fontFamily="@font/sourcesanspro_regular"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tentangBookTutor"
            android:id="@+id/edContainer"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_education"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S1 Teknik Informatika Universitas Padjadjaran"
                android:textColor="@color/colorPrimaryText"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edContainer"
            android:id="@+id/certContainer"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_certif"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pelatihan Dasar Terapi ABA (Applied Behavior Analysis)"
                android:textColor="@color/colorPrimaryText"
                android:textSize="14sp"/>

        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btnBookSekarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_button"
        android:textColor="#fff"
        android:layout_marginTop="8dp"
        android:text="Booking Sekarang"
        style="?android:borderlessButtonStyle"
        />

</RelativeLayout>