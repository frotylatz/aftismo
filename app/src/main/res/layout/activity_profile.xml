<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="#f2f2f2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarProfile"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="#fff">

            <TextView
                android:id="@+id/tvToolbar"
                android:text="profil"
                android:textColor="@color/colorPrimary"
                android:layout_marginRight="15dp"
                android:paddingTop="14dp"
                android:textStyle="bold"
                android:fontFamily="@font/lifesavers_bold"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="#fff"
            android:id="@+id/profileContainer"
            android:layout_marginTop="4dp"
            android:layout_below="@id/toolbarProfile">

            <TextView
                android:id="@+id/tvNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vega Savera Yuana"
                android:textColor="@color/colorPrimaryText"
                android:textSize="16sp"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:layout_marginLeft="4dp"/>

            <TextView
                android:id="@+id/tvUbah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UBAH"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_marginRight="4dp"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/tvNomorHp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="081293168889"
                android:textColor="@color/colorPrimaryText"
                android:textSize="16sp"
                android:fontFamily="@font/sourcesanspro_regular"
                android:layout_below="@id/tvNama"
                android:layout_marginLeft="4dp"/>

            <TextView
                android:id="@+id/alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat:"
                android:textColor="@color/colorPrimaryText"
                android:textSize="12sp"
                android:fontFamily="@font/sourcesanspro_regular"
                android:layout_below="@id/tvNomorHp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="4dp"/>

            <TextView
                android:id="@+id/tvAlamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum menyimpan alamat"
                android:textColor="#dcff7a30"
                android:textSize="14sp"
                android:fontFamily="@font/sourcesanspro_regular"
                android:layout_below="@id/alamat"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="18dp"/>

        </RelativeLayout>

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileContainer"
            android:layout_centerHorizontal="true"
            android:background="#fff"
            android:textColor="#ec2f2f"
            android:layout_marginTop="8dp"
            android:text="Log Out"
            style="?android:borderlessButtonStyle"/>

            </RelativeLayout>

        <include
            android:id="@id/navigation"
            layout="@layout/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="#fff"
            />

</RelativeLayout>